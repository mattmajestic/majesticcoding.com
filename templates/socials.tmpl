{{ define "socials" }}
<div class="socials-container">
  <div class="socials-grid">
    <!-- YouTube -->
    <div class="social-card">
      <a href="https://www.youtube.com/@majesticcoding/videos"
         target="_blank" 
         class="social-link youtube">
         <span class="tooltip-text">View Tutorials</span>
        <i class="fab fa-youtube social-icon"></i>
        <span class="social-label">YouTube</span>
      </a>
      <button class="stats-button" data-provider="youtube">
        <span class="tooltip-text">YouTube Stats</span>
        <i class="fas fa-chart-line"></i>
        <span>Stats</span>
      </button>
    </div>

    <!-- GitHub -->
    <div class="social-card">
      <a href="https://github.com/mattmajestic" 
         target="_blank" 
         class="social-link github">
         <span class="tooltip-text">Browse Code</span>
        <i class="fab fa-github social-icon"></i>
        <span class="social-label">GitHub</span>
      </a>
      <button class="stats-button" data-provider="github">
        <span class="tooltip-text">GitHub Stats</span>
        <i class="fas fa-chart-line"></i>
        <span>Stats</span>
      </button>
    </div>

    <!-- LeetCode -->
    <div class="social-card">
      <a href="https://www.leetcode.com/mattmajestic" 
         target="_blank" 
         class="social-link leetcode">
         <span class="tooltip-text">Coding Problems</span>
        <i class="fas fa-code social-icon"></i>
        <span class="social-label">LeetCode</span>
      </a>
      <button class="stats-button" data-provider="leetcode">
        <span class="tooltip-text">LeetCode Stats</span>
        <i class="fas fa-chart-line"></i>
        <span>Stats</span>
      </button>
    </div>

    <!-- Twitch -->
    <div class="social-card">
      <a href="https://www.twitch.tv/majesticcodingtwitch" 
         target="_blank" 
         class="social-link twitch">
         <span class="tooltip-text">Live Coding</span>
        <i class="fab fa-twitch social-icon"></i>
        <span class="social-label">Twitch</span>
      </a>
      <button class="stats-button" data-provider="twitch">
        <span class="tooltip-text">Twitch Stats</span>
        <i class="fas fa-chart-line"></i>
        <span>Stats</span>
      </button>
    </div>
  </div>
  {{ template "stats" . }}
</div>
{{ end }}