{{ template "base" . }}

<body class="min-h-screen bg-gray-100 dark:bg-gray-900 transition-colors duration-300">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <img src="https://avatars.githubusercontent.com/u/33904170?v=4" alt="Majestic Coding" class="w-16 h-16 rounded-full mx-auto mb-4">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">Account Settings</h1>
        <p class="text-gray-600 dark:text-gray-300">Manage your account preferences and information</p>
      </div>

      <div id="loading" class="text-center mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto mb-4"></div>
          <p class="text-gray-600 dark:text-gray-300">Loading your settings...</p>
        </div>
      </div>

      <div id="settings-content" class="hidden space-y-6">
        <!-- Account Information -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <div class="flex items-center mb-6">
            <i class="fas fa-user-circle text-3xl text-blue-600 mr-3"></i>
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Account Information</h2>
          </div>
          <div id="account-info" class="grid md:grid-cols-2 gap-6">
            <!-- Will be populated by JavaScript -->
          </div>
        </div>

        <!-- Authentication Methods & Account Actions Row -->
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Authentication Methods -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-200 dark:border-gray-700">
            <div class="flex items-center mb-6">
              <i class="fas fa-shield-alt text-3xl text-green-600 mr-3"></i>
              <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Auth Methods</h2>
            </div>
            <div id="auth-methods" class="space-y-3">
              <!-- Will be populated by JavaScript -->
            </div>
          </div>

          <!-- Account Actions -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-200 dark:border-gray-700">
            <div class="flex items-center mb-6">
              <i class="fas fa-cogs text-3xl text-purple-600 mr-3"></i>
              <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Account Actions</h2>
            </div>
            <div class="space-y-3">
              <button id="sync-data-btn" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-300 flex items-center justify-center">
                <i class="fas fa-sync-alt mr-2"></i>
                Sync Data to Database
              </button>
              <button id="sign-out-btn" class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-6 rounded-lg transition duration-300 flex items-center justify-center">
                <i class="fas fa-sign-out-alt mr-2"></i>
                Sign Out
              </button>
            </div>
            <div id="action-result" class="mt-4 hidden"></div>
          </div>
        </div>

        <!-- Raw User Data (Collapsible) -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold mb-4 cursor-pointer flex items-center text-gray-800 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition duration-300" onclick="toggleRawData()">
            <i class="fas fa-code text-2xl text-gray-600 mr-3"></i>
            <span id="raw-data-toggle" class="mr-2">▶</span>
            <span>Raw User Data</span>
          </h2>
          <div id="raw-data-container" class="hidden">
            <pre id="raw-data" class="bg-gray-100 dark:bg-gray-700 p-4 rounded-lg text-sm overflow-auto max-h-96 border border-gray-300 dark:border-gray-600"></pre>
          </div>
        </div>
      </div>

      <div id="error" class="hidden">
        <div class="text-center bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8 border border-red-200 dark:border-red-700">
          <div class="w-16 h-16 bg-red-100 dark:bg-red-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-exclamation-triangle text-2xl text-red-600"></i>
          </div>
          <h2 class="text-xl font-bold mb-2 text-red-600">Not Logged In</h2>
          <p class="mb-6 text-gray-600 dark:text-gray-300">Please sign in first to access your settings</p>
          <a href="/auth" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-300 inline-flex items-center">
            <i class="fas fa-sign-in-alt mr-2"></i>
            Sign In
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div class="text-center mt-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
          <div class="flex justify-center space-x-6">
            <a href="/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-300 flex items-center">
              <i class="fas fa-home mr-2"></i>
              Home
            </a>
            <a href="/dashboard" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-300 flex items-center">
              <i class="fas fa-tachometer-alt mr-2"></i>
              Dashboard
            </a>
            <a href="/auth" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-300 flex items-center">
              <i class="fas fa-sign-in-alt mr-2"></i>
              Sign In
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    let authManager;

    function waitForAuth() {
      return new Promise((resolve) => {
        const check = () => {
          if (window.authManager) {
            authManager = window.authManager;
            resolve();
          } else {
            setTimeout(check, 100);
          }
        };
        check();
      });
    }

    async function loadSettings() {
      try {
        await waitForAuth();
        await new Promise(resolve => setTimeout(resolve, 500));

        const user = authManager.getCurrentUser();

        console.log('Settings - User:', user?.email);

        if (!user) {
          console.log('Settings - No user, showing error');
          document.getElementById('loading').classList.add('hidden');
          document.getElementById('error').classList.remove('hidden');
          return;
        }

        // Just use the current user data from session
        displaySettings(user);

      } catch (error) {
        console.error('Error loading settings:', error);
        document.getElementById('loading').classList.add('hidden');
        document.getElementById('error').classList.remove('hidden');
      }
    }

    function displaySettings(userData) {
      document.getElementById('loading').classList.add('hidden');
      document.getElementById('settings-content').classList.remove('hidden');

      // Display account info
      const accountInfo = document.getElementById('account-info');
      const displayName = userData.user_metadata?.full_name || userData.user_metadata?.name || userData.email;
      const avatarUrl = userData.user_metadata?.avatar_url || userData.user_metadata?.picture;

      accountInfo.innerHTML = `
        <div class="flex items-center space-x-6">
          ${avatarUrl ?
            `<img src="${avatarUrl}" alt="Avatar" class="w-20 h-20 rounded-full border-4 border-blue-200 dark:border-blue-800">` :
            '<div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center"><i class="fas fa-user text-white text-2xl"></i></div>'
          }
          <div>
            <h3 class="text-2xl font-bold text-gray-800 dark:text-white">${displayName}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-2">${userData.email}</p>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${userData.email_confirmed_at ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'}">
              <i class="fas ${userData.email_confirmed_at ? 'fa-check-circle' : 'fa-exclamation-triangle'} mr-1"></i>
              ${userData.email_confirmed_at ? 'Verified' : 'Unverified'}
            </span>
          </div>
        </div>
        <div class="mt-6 grid md:grid-cols-2 gap-4">
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <i class="fas fa-calendar-alt text-blue-600 mr-2"></i>
              <span class="font-medium text-gray-800 dark:text-white">Member Since</span>
            </div>
            <p class="text-gray-600 dark:text-gray-300">${new Date(userData.created_at).toLocaleDateString()}</p>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <i class="fas fa-clock text-green-600 mr-2"></i>
              <span class="font-medium text-gray-800 dark:text-white">Last Sign In</span>
            </div>
            <p class="text-gray-600 dark:text-gray-300">${new Date(userData.last_sign_in_at).toLocaleDateString()}</p>
          </div>
        </div>
      `;

      // Display auth methods
      const authMethods = document.getElementById('auth-methods');
      const providers = userData.app_metadata?.providers || [];
      if (providers.length > 0) {
        authMethods.innerHTML = `
          <div class="space-y-2">
            ${providers.map(provider => `
              <div class="flex items-center justify-between px-3 py-2 bg-green-50 dark:bg-green-900 border border-green-200 dark:border-green-700 rounded-lg">
                <div class="flex items-center">
                  <i class="fab fa-${provider} text-lg mr-2 text-green-600"></i>
                  <span class="font-medium text-green-800 dark:text-green-200 capitalize">${provider}</span>
                </div>
                <i class="fas fa-check-circle text-green-600"></i>
              </div>
            `).join('')}
          </div>
        `;
      } else {
        authMethods.innerHTML = `
          <div class="flex items-center justify-between px-3 py-2 bg-blue-50 dark:bg-blue-900 border border-blue-200 dark:border-blue-700 rounded-lg">
            <div class="flex items-center">
              <i class="fas fa-envelope text-lg mr-2 text-blue-600"></i>
              <span class="font-medium text-blue-800 dark:text-blue-200">Email/Password</span>
            </div>
            <i class="fas fa-check-circle text-blue-600"></i>
          </div>
        `;
      }

      // Display raw data
      document.getElementById('raw-data').textContent = JSON.stringify(userData, null, 2);
    }

    // Toggle raw data visibility
    window.toggleRawData = function() {
      const container = document.getElementById('raw-data-container');
      const toggle = document.getElementById('raw-data-toggle');

      if (container.classList.contains('hidden')) {
        container.classList.remove('hidden');
        toggle.textContent = '▼';
      } else {
        container.classList.add('hidden');
        toggle.textContent = '▶';
      }
    };

    // Sync data button
    document.addEventListener('DOMContentLoaded', () => {
      loadSettings();

      document.getElementById('sync-data-btn')?.addEventListener('click', async () => {
        try {
          const result = await authManager.syncUser();
          const resultEl = document.getElementById('action-result');
          resultEl.className = 'mt-4 p-3 bg-green-100 text-green-800 rounded';
          resultEl.textContent = '✅ Data synced successfully!';
          resultEl.classList.remove('hidden');
        } catch (error) {
          const resultEl = document.getElementById('action-result');
          resultEl.className = 'mt-4 p-3 bg-red-100 text-red-800 rounded';
          resultEl.textContent = '❌ Sync failed: ' + error.message;
          resultEl.classList.remove('hidden');
        }
      });

      // Sign out is handled by the main supabase-auth.js file
    });
  </script>
  <script type="module" src="/static/js/supabase-auth.js"></script>
  <script src="/static/components/theme.js"></script>
</body>

