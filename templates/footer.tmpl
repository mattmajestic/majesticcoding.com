{{ define "footer" }}
<footer class="text-center text-gray-500 text-md mt-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div id="header-content" class="flex justify-center w-full space-x-4">
        {{ template "theme" . }}
        {{ template "email-btn" . }}
        {{ template "lkn-btn" . }}
        <div class="icon-widget">
            <a href="https://github.com/mattmajestic/majesticcoding.com/" 
               id="edit-page-button" 
               class="icon-widget-link">
                <span class="tooltip-text">Visit Code in Github Repo</span>
                <i class="fab fa-golang nav-icon"></i>
            </a>
        </div>
        
    </div>
</footer>
{{ end }}