  </ul>
  <div class="mt-4 bg-gray-900 p-3 rounded">
    <pre class="text-green-400 text-sm"><code>services:
  rtmp-server:
    image: alfg/nginx-rtmp
    ports:
      - "1935:1935"
      - "8081:8080"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - stream_data:/tmp/hls

  majesticcoding:
    build:
      context: .
    ports:
      - "8080:8080"
    volumes:
      - stream_data:/static/stream</code></pre>
  </div>
