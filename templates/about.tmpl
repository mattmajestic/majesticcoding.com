{{ template "base" . }}
<!DOCTYPE html>
<html lang="en">
<body>
  <div class="mt-4 flex flex-col justify-center items-center px-4">
    <div class="w-full max-w-3xl rounded-xl p-2 mt-2 mb-4 flex flex-col items-center">
      {{ template "intro" . }}
      {{ template "lkn-btn" . }}
      <nav class="flex flex-wrap justify-center mt-6 gap-2 border-b border-gray-700 pb-2">
      <button class="about-btn px-4 py-2 text-lg rounded-md text-white bg-gray-800 hover:bg-gray-700 transition" title="Tech Stack I use" data-tab="tech">💻 Tech Stack</button>
        <button class="about-btn px-4 py-2 text-lg rounded-md text-white bg-gray-800 hover:bg-gray-700 transition" title="Company projects" data-tab="companies">🏢 Experience</button>
        <button class="about-btn px-4 py-2 text-lg rounded-md text-white bg-gray-800 hover:bg-gray-700 transition" title="University Days" data-tab="education">🎓 Education</button>
      </nav>
    <section id="about-content" class="w-full">
      <div id="tab-tech">{{ template "tech" . }}</div>
      <div id="tab-companies" style="display:none;">{{ template "companies" . }}</div>
      <div id="tab-education" style="display:none;">{{ template "education" . }}</div>
    </section>
    </div>
    <div class="w-full flex justify-center mt-auto mb-8">
      {{ template "footer_home" . }}
    </div>
  </div>
  <script>window.TYPING_SECTION = "about";</script>
  <script src="/static/components/typing.js"></script>
  <script src="/static/components/about.js"></script>
  <script src="/static/components/theme.js"></script>
</body>
</html>