<body class="bg-gray-900 text-white">
    <div class="flex flex-col items-center justify-center min-h-screen space-y-4">
        <img src="https://avatars.githubusercontent.com/u/33904170?v=4" alt="Majestic Coding Logo" class="w-48 h-48 mb-4 glowing-effect">
        <div class="mb-4">
            <a href="https://www.youtube.com/@majesticcoding/videos" target="_blank" class="custom-button glowing-effect">
                <i class="fab fa-youtube"></i> YouTube
            </a>
            <a href="https://github.com/mattmajestic" target="_blank" class="custom-button glowing-effect">
                <i class="fab fa-github"></i> GitHub
            </a>
            <a href="https://www.tiktok.com/@majesticcodingtt" target="_blank" class="custom-button glowing-effect">
                <i class="fab fa-tiktok"></i> TikTok
            </a>
            <a href="https://www.twitch.tv/majesticcodingtwitch" target="_blank" class="custom-button glowing-effect">
                <i class="fab fa-twitch"></i> Twitch
            </a>
        </div>
        <div>
            <button id="theme-toggle" class="custom-button glowing-effect">
                <i class="fas fa-sun theme-toggle-icon"></i>
            </button>
        </div>
    </div>
    <script src="clerk.js"></script>
    <script src="script.js"></script>
</body>
{{template "footer.tmpl"}}
</html>
